<?xml version="1.0" encoding="utf-8"?>
 <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        app:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<FrameLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:id="@+id/album_art_container"-->
                <!--android:layout_height="@dimen/album_cover_height">-->
            <ImageView
                android:id="@+id/grid_song_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_cover_height"
                android:src="@drawable/default_album_art"
                android:clickable="true"
                android:scaleType="fitXY" />

            <!--</FrameLayout>-->

            <TextView
                android:id="@+id/grid_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grid_song_thumbnail"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#4c4c4c"
                android:textSize="@dimen/album_title" />

            <TextView
                android:id="@+id/grid_song_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grid_song_title"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="@dimen/songs_count" />

            <!--<ImageButton-->
                <!--android:id="@+id/overflow_menu_button"-->
                <!--android:layout_width="@dimen/ic_album_overflow_width"-->
                <!--android:layout_height="@dimen/ic_album_overflow_height"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:background="#fff"-->
                <!--android:layout_below="@id/grid_song_thumbnail"-->
                <!--android:layout_marginTop="@dimen/ic_album_overflow_margin_top"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:onClick="menuButtonPressed"-->
                <!--android:src="@drawable/ic_action_overflow" />-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>
